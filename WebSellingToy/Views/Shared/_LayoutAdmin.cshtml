@{ 
    WebSellingToy.Models.NhanVien tkadmin = new WebSellingToy.Models.NhanVien();
    if (Session["TaikhoanAdmin"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
    else if (Session["TaikhoanAdmin"] != null)
    {
        var session = Session["TaikhoanAdmin"] as WebSellingToy.Models.NhanVien;
        tkadmin = session;
    }



}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Quản lý web", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Quản Lý Sản Phẩm", "QuanLySanPham", "Admin")</li>
                    <li>@Html.ActionLink("Quản Lý Nhân Viên", "QuanLyAdmin", "Admin")</li>
                    <li>@Html.ActionLink("Thống Kê Doanh Số", "ThongKeDoanhSo", "Admin")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            @tkadmin.TenNhanVien <span class="caret"></span>
                        </a>

                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("DoiMatKhauAdmin", "Admin", new {id = tkadmin.MaNhanVien})">Đổi mật khẩu</a></li>
                            
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Đăng Xuất", "DangXuatAdmin", "Admin")</li>
                        </ul>
                    </li>
                   



                    
                </ul>
            </div>
        </div>
    </div>
    
    <div class="container body-content">

        <hr />
        <hr />
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Power by PinkFullColor</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

