@model WebSellingToy.Models.HoaDonBanHang

@{
    ViewBag.Title = "XacNhanXoaDonHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa đơn hàng</h2>

<h3>Bạn có chắc là muốn xóa đơn hàng này cùng tất cả các bản ghi liên quan???</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Mã hóa đơn:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaHoaDon)
        </dd>

        <dt>
            Xác nhận đơn hàng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.XacNhanDonHang)
        </dd>

        <dt>
            Tình trạng thanh toán:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TinhTrangThanhToan)
        </dd>

        <dt>
            Ngày lập:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayLap)
        </dd>

        <dt>
            Địa chỉ nhận hàng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChiNhanHang)
        </dd>

    </dl>

    @using (Html.BeginForm("XoaDonHang","Admin", new { @id = Model.MaHoaDon})) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> <br />|
            @Html.ActionLink("Quay lại danh sách xác nhận đơn hàng", "XacNhanDonHang")
        </div>
    }
</div>
