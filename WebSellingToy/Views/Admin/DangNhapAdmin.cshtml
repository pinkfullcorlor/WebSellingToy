@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V1</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="css/util.css">
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <!--===============================================================================================-->

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@100;300;600;700&display=swap" rel="stylesheet">

    <link href="~/Content/ContenForLogin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/ContenForLogin/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/ContenForLogin/vendor/animate/animate.css" rel="stylesheet" />
    <link href="~/Content/ContenForLogin/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" />
    <link href="~/Content/ContenForLogin/vendor/select2/select2.min.css" rel="stylesheet" />
    <link href="~/Content/ContenForLogin/css/util.css" rel="stylesheet" />
    <link href="~/Content/ContenForLogin/css/main.css" rel="stylesheet" />





</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/image/fullcolorworkshop.jpg" alt="IMG">
                </div>

                

                @using (Html.BeginForm())
                {
                <form class="login100-form validate-form">
                    <span class="login100-form-title">
                        LOGIN ADMIN
                    </span>

                    <div>
                        <p class="BayLoi">@ViewBag.Thongbao</p>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input class="input100" type="text" name="username" placeholder="Tên đăng nhập">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>
                    <p class="BayLoi">@ViewData["Loi1"]</p>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" type="password" name="password" placeholder="Mật khẩu">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    <p class="BayLoi">@ViewData["Loi2"]</p>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" type="submit">
                            Login
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" href="#">
                            Tên đăng nhập / Mật khẩu?
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="#">
                            Tạo tài khoản mới
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
                }
                </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/bootstrap/js/popper.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="js/main.js"></script>

    <script src="~/Content/ContenForLogin/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/Content/ContenForLogin/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/ContenForLogin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/ContenForLogin/vendor/select2/select2.min.js"></script>
    <script src="~/Content/ContenForLogin/vendor/tilt/tilt.jquery.min.js"></script>



</body>
</html>